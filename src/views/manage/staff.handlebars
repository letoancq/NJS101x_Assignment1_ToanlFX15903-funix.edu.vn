<div class="grid">
    <div class="referenceStaff__wrapper">
        <h3 class="referenceStaff__title">Danh sách lượt làm</h3>
        <h4 class="referenceStaff__title">Nhân viên: {{staff.name}}</h4>
        {{#if length}}
            <table class="referenceStaff__table">
                <tr>
                    <th colspan="2">Ngày</th>
                    <th colspan="2">Giờ bắt đầu</th>
                    <th colspan="2">Giờ kết thúc</th>
                    <th colspan="2">Nơi làm việc</th>
                    <th colspan="2"></th>
                </tr>   
                 {{#each workInDay}}
                    <tr>
                        <td colspan="2">
                             {{startDay}}
                        </td>
                        <td colspan="2">
                             {{startTime}}
                        </td>
                        <td colspan="2">
                             {{endTime}}
                        </td>
                        <td colspan="2">
                             {{workPlace}}
                        </td>
                        <td colspan="2">
                            <form action="/manageStaff/postDeleteWorkTime"
                                method="POST">
                                <input type="hidden" name="workTime"
                                    value="{{id}}">
                                <input type="hidden" name="staffId"
                                    value="{{../id}}">
                                <input type="hidden" name="_csrf" value="{{../csrfToken}}" />
                                <button class=" btn-primary"
                                    type="submit">Xóa</button>
                            </form>
                        </td>   
                          {{/each}}
                        
                    </tr>
                
            </table>
            <p class="referenceStaff__article">
                Tổng số giờ làm lần này : {{#if (compare2 isStarted)}}
                       {{timeWorked.totalHourWorked}}:{{timeWorked.totalMinWorked}}
                        {{else}}
                          --
                        {{/if}}
            </p>
            <p class="referenceStaff__article">
                Tổng số giờ làm thêm: {{overTime.overHour}}:{{overTime.overMin}}
            </p>
            {{ else}}
                <h3>Chưa có lượt làm</h3>
              {{/if}}
                    <form style="text-align:center" class="form-control"
                        action="/manageStaff/comfirmTimeWork" method="POST">
                        <input type="hidden" name="staffId"
                                    value="{{id}}">
                        <input type="hidden" name="month" value={{month}}>
                        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                        <button class="btn" type="submit">Xác nhận</button>
                    </form>
    </div>
    <div class="referenceStaff__wrapper">
        <h3 class="referenceStaff__title">Danh sách đăng ký nghỉ phép</h3>
        <table class="referenceStaff__table">
            <tr>
                <th>Ngày</th>
                <th colspan="4">Số Giờ</th>
                <th colspan="4">Lý do</th>
            </tr>
            {{#each dayLeave}}
            <tr>
                <td>
                    {{day}}
                </td>
                <td colspan="4">
                    {{time}}
                </td>
                <td colspan="4">
                    {{reason}}
                </td>
            </tr>
            {{/each}}    
        </table>
    </div>
</div>